{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "declaration": true,   // Generates type declaration files (.d.ts)
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",      // Output directory for compiled JS files
    "rootDir": "./src",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "tests"]
}
